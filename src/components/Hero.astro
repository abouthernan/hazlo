<style>

  #dynamicText {
    transition: opacity 0.3s ease;
 }

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 10rem;
    /**padding: 6rem 0 4rem;**/
    position: relative;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    background: rgba(255, 255, 255, 0.1);
    border: 0px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    font-size: var(--font-small);
    color: var(--text-secondary);
    backdrop-filter: blur(10px);
    width: fit-content;
    transition: var(--transition);
  }

  .hero-badge:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .badge-icon {
    font-size: 1rem;
  }

  /* TÃ­tulo */
  .hero-title {
    font: var(--font-h1);
    color: var(--text-primary);
    line-height: 1.1;
    margin: 0;
  }

  .title-gradient {
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-blue) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  /* SubtÃ­tulo */
  .hero-subtitle {
    font: var(--font-body-lg);
    color: var(--text-secondary);
    max-width: 90%;
    line-height: 1.6;
  }

  /* Actions */
  .hero-actions {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-sm);
  }

  .hero-cta-primary {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-md) var(--space-xl);
    font-size: 1rem;
    font-weight: 600;
  }

  .hero-cta-secondary {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-md) var(--space-xl);
    font-size: 1rem;
    font-weight: 600;
  }

  /* Stats */
  .hero-stats {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    margin-top: var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border-light);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: var(--font-small);
    color: var(--text-muted);
  }

  .stat-divider {
    width: 1px;
    height: 2rem;
    background: var(--border-light);
  }

  /* Visual Elements */
  

  /* Chat Animation Styles */
  .hero-visual {
    position: relative;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .chat-container {
    width: 350px;
    height: 450px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    backdrop-filter: blur(20px);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    animation: chatFloat 6s ease-in-out infinite;
  }

  @keyframes chatFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  /* Chat Header */
  .chat-header {
    display: flex;
    align-items: center;
    padding: var(--space-md);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
  }

  .chat-avatar {
    margin-right: var(--space-sm);
  }

  .avatar-gradient {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-blue) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .chat-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .chat-name {
    font-weight: 600;
    color: var(--text-primary);
    font-size: 1rem;
  }

  .chat-status {
    font-size: 0.8rem;
    color: #10B981;
    margin-top: 2px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: #10B981;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Chat Messages */
  .chat-messages {
    flex: 1;
    padding: var(--space-md);
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .chat-messages::-webkit-scrollbar {
    width: 4px;
  }

  .chat-messages::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
  }

  .message {
    display: flex;
    align-items: flex-end;
    gap: var(--space-xs);
    opacity: 0;
    transform: translateY(20px);
    animation: messageAppear 0.5s ease-out forwards;
  }

  @keyframes messageAppear {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .message.user {
    flex-direction: row-reverse;
    align-self: flex-end;
  }

  .message.hazlo {
    flex-direction: row;
    align-self: flex-start;
  }

  .message-avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-blue) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 0.7rem;
    flex-shrink: 0;
  }

  .user .message-avatar {
    background: #3B82F6;
  }

  .message-bubble {
    max-width: 70%;
    padding: var(--space-sm) var(--space-md);
    border-radius: 18px;
    font-size: 0.9rem;
    line-height: 1.4;
    position: relative;
  }

  .message.user .message-bubble {
    background: #3B82F6;
    color: white;
    border-bottom-right-radius: 4px;
  }

  .message.hazlo .message-bubble {
    background: rgba(255, 255, 255, 0.15);
    color: var(--text-primary);
    border-bottom-left-radius: 4px;
  }

  .message-time {
    font-size: 0.7rem;
    color: var(--text-muted);
    margin-top: 4px;
    text-align: right;
  }

  .message.hazlo .message-time {
    text-align: left;
  }

  /* Typing Indicator */
  .typing-indicator {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 0 var(--space-md) var(--space-md);
    opacity: 0;
    transform: translateY(10px);
  }

  .typing-indicator.show {
    opacity: 1;
    transform: translateY(0);
    animation: messageAppear 0.3s ease-out;
  }

  .typing-indicator .avatar-gradient {
    width: 24px;
    height: 24px;
    font-size: 0.7rem;
  }

  .typing-bubble {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 18px;
    padding: var(--space-sm) var(--space-md);
    border-bottom-left-radius: 4px;
  }

  .typing-dots {
    display: flex;
    gap: 4px;
  }

  .typing-dots span {
    width: 6px;
    height: 6px;
    background: var(--text-muted);
    border-radius: 50%;
    animation: typingDot 1.4s infinite;
  }

  .typing-dots span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .typing-dots span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes typingDot {
    0%, 60%, 100% { opacity: 0.3; }
    30% { opacity: 1; }
  }





