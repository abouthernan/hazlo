<style>
    .how-it-works-section {
        padding: 6rem 0;
        background: radial-gradient(
            ellipse at center,
            rgba(70, 50, 115, 0.06) 0%,
            transparent 70%
        );
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.5rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        font-size: 0.875rem;
        color: #cbd5e1;
        backdrop-filter: blur(10px);
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0 0 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.025em;
        color: #f8fafc;
    }

    .title-gradient {
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-blue) 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .section-subtitle {
        font-size: 1.125rem;
        color: #94a3b8;
        margin: 0;
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.5;
    }

     .partner-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: #6be8b6;
        flex-shrink: 0;
    }

    /* Cards Grid */
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        margin-top: 3rem;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .feature-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(135deg, #463273 0%, #6be8b6 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .feature-card:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
    }

    .feature-card:hover::before {
        opacity: 1;
    }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: linear-gradient(135deg, #463273 0%, #6be8b6 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #f8fafc;
        margin: 0 0 1rem;
        line-height: 1.3;
    }

    .card-description {
        font-size: 0.9rem;
        color: #cbd5e1;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .card-features {
        list-style: none;
        padding: 0;
        margin: 0 0 1.5rem 0;
    }

    .card-features li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        font-size: 0.875rem;
        color: #94a3b8;
        margin-bottom: 0.4rem;
        line-height: 1.3;
    }

    .card-features li::before {
        content: "‚úì";
        color: #6be8b6;
        font-weight: 700;
        flex-shrink: 0;
        margin-top: 1px;
        font-size: 1rem;
    }

    .card-duration {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #f8fafc;
        font-weight: 600;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .clock-icon {
        width: 16px;
        height: 16px;
        border: 2px solid #6be8b6;
        border-radius: 50%;
        position: relative;
    }

    .clock-icon::before {
        content: "";
        position: absolute;
        top: 2px;
        left: 6px;
        width: 2px;
        height: 4px;
        background: #6be8b6;
        transform-origin: bottom;
    }

    .clock-icon::after {
        content: "";
        position: absolute;
        top: 4px;
        left: 6px;
        width: 2px;
        height: 2px;
        background: #6be8b6;
        transform-origin: bottom;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .how-it-works-section {
            padding: 4rem 0;
        }

        .container {
            padding: 0 1rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .cards-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .feature-card {
            padding: 1.5rem;
        }

        .card-icon {
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .section-title {
            font-size: 1.75rem;
        }

        .section-subtitle {
            font-size: 1rem;
        }

        .card-title {
            font-size: 1.125rem;
        }
    }
</style>
